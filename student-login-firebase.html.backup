<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Login - BedrockELA</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: linear-gradient(135deg, #305853 0%, #1B2A30 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .login-container {
            background: white;
            border-radius: 25px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 450px;
            width: 100%;
            padding: 50px 40px;
        }
        
        .logo {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .logo h1 {
            font-size: 3rem;
            margin-bottom: 10px;
        }
        
        .logo h2 {
            font-size: 1.8rem;
            color: #1B2A30;
            margin-bottom: 10px;
        }
        
        .logo p {
            color: #666;
            font-size: 1.1rem;
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        label {
            display: block;
            font-weight: 700;
            color: #1B2A30;
            margin-bottom: 10px;
            font-size: 1.1rem;
        }
        
        input {
            width: 100%;
            padding: 15px 20px;
            border: 3px solid #e0e0e0;
            border-radius: 15px;
            font-size: 1.2rem;
            transition: border-color 0.3s;
            font-family: inherit;
        }
        
        input:focus {
            outline: none;
            border-color: #305853;
        }
        
        input#pin {
            text-align: center;
            font-size: 1.5rem;
            letter-spacing: 10px;
        }
        
        .btn-primary {
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, #305853 0%, #1B2A30 100%);
            color: white;
            border: none;
            border-radius: 15px;
            font-size: 1.3rem;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            margin-top: 10px;
        }
        
        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }
        
        .btn-primary:active {
            transform: translateY(0);
        }
        
        .btn-primary:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }
        
        .message {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 25px;
            display: none;
            text-align: center;
            font-size: 1rem;
        }
        
        .message.success {
            background: #d4edda;
            color: #155724;
            border: 2px solid #c3e6cb;
        }
        
        .message.error {
            background: #f8d7da;
            color: #721c24;
            border: 2px solid #f5c6cb;
        }
        
        .help-text {
            text-align: center;
            margin-top: 25px;
            color: #666;
            font-size: 1rem;
        }
        
        .help-text a {
            color: #305853;
            text-decoration: none;
            font-weight: 600;
        }
        
        .help-text a:hover {
            text-decoration: underline;
        }
        
        .back-link {
            text-align: center;
            margin-bottom: 20px;
        }
        
        .back-link a {
            color: #305853;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 600;
        }
        
        .back-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="back-link">
            <a href="index.html">‚Üê Back to Home</a>
        </div>
        
        <div class="logo">
            <h1>üìö</h1>
            <h2>Student Login</h2>
            <p>Enter your username and PIN</p>
        </div>
        
        <div id="message" class="message"></div>
        
        <form id="loginForm">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required 
                       placeholder="Your username" autocomplete="username">
            </div>
            
            <div class="form-group">
                <label for="pin">PIN Code (if you have one)</label>
                <input type="password" id="pin" name="pin" maxlength="4" 
                       placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢" inputmode="numeric">
            </div>
            
            <button type="submit" class="btn-primary" id="submitBtn">
                Start Learning! ‚Üí
            </button>
        </form>
        
        <div class="help-text">
            üìù Don't have an account?<br>
            Ask your parent to add you!
        </div>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
        import { getFirestore, collection, query, where, getDocs } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBe9j9udmBMxjSgQ9rjlao8bYOGnPcg69Y",
            authDomain: "bedrockela-96dbd.firebaseapp.com",
            projectId: "bedrockela-96dbd",
            storageBucket: "bedrockela-96dbd.firebasestorage.app",
            messagingSenderId: "195204486496",
            appId: "1:195204486496:web:c28bcef144debea29f3a05"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const message = document.getElementById('message');
            
            const username = document.getElementById('username').value.trim().toLowerCase();
            const pin = document.getElementById('pin').value.trim();
            
            // Disable button
            submitBtn.disabled = true;
            submitBtn.textContent = 'Logging in...';
            message.style.display = 'none';
            
            try {
                // Find student by username
                const studentsRef = collection(db, 'students');
                const q = query(studentsRef, where('username', '==', username));
                const querySnapshot = await getDocs(q);
                
                if (querySnapshot.empty) {
                    throw new Error('Username not found');
                }
                
                // Get the student
                const studentDoc = querySnapshot.docs[0];
                const student = studentDoc.data();
                
                // Check PIN if student has one
                if (student.pin && student.pin !== pin) {
                    throw new Error('Incorrect PIN');
                }
                
                // Success! Save student info to localStorage
                localStorage.setItem('bedrockela_student', JSON.stringify({
                    id: studentDoc.id,
                    name: student.name,
                    gradeLevel: student.gradeLevel,
                    currentLesson: student.currentLesson || 1
                }));
                
                // Show success message
                message.textContent = `Welcome, ${student.name}! üéâ`;
                message.className = 'message success';
                message.style.display = 'block';
                
                // Redirect to student dashboard
                setTimeout(() => {
                    window.location.href = 'student-dashboard-firebase.html';
                }, 1000);
                
            } catch (error) {
                console.error('Login error:', error);
                
                let errorMessage = 'Login failed';
                if (error.message === 'Username not found') {
                    errorMessage = 'Username not found. Check your spelling!';
                } else if (error.message === 'Incorrect PIN') {
                    errorMessage = 'Incorrect PIN. Try again!';
                }
                
                message.textContent = errorMessage;
                message.className = 'message error';
                message.style.display = 'block';
                
                submitBtn.disabled = false;
                submitBtn.textContent = 'Start Learning! ‚Üí';
            }
        });
    </script>
</body>
</html>
